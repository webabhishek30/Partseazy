<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/margin32LeftRight">
    <RelativeLayout
        android:id="@+id/subCatTitleRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBoxBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin10"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/sectionIcon"
            android:layout_toRightOf="@+id/checkBoxBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin10"
            android:src="@drawable/ic_business"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/subCatNameTv"
            android:layout_toRightOf="@id/sectionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_18" />

    </RelativeLayout>

</LinearLayout>