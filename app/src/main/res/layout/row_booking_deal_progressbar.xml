<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookingProgressBarLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin20"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/firstTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="left"
            android:text="@string/address"
            android:textAllCaps="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/secondTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="center"
            android:text="@string/booking"
            android:textAllCaps="true"
            android:layout_marginRight="@dimen/margin15"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/thirdTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="right"
            android:text="@string/complete"
            android:textAllCaps="true"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/firstCheckIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/check_green_circle" />

        <View
            android:id="@+id/firstLineView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight=".45"
            android:background="@color/view" />

        <ImageView
            android:id="@+id/secondCheckIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circular_border" />

        <View
            android:id="@+id/secondLineView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight=".45"
            android:background="@color/view" />

        <ImageView
            android:id="@+id/thirdCheckIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circular_border" />

    </LinearLayout>

</LinearLayout>