<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/margin10LeftRight"
        android:layout_marginTop="@dimen/margin5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nameTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15"
                android:layout_weight="0.65"
                android:textStyle="bold"
                android:gravity="left"/>
            <TextView
                android:id="@+id/mobileTV"
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:gravity="right"
                android:textSize="@dimen/text_15" />

        </LinearLayout>


        <TextView
            android:id="@+id/addressTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/landmarkTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pincodeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/gstnTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_15"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>
    <TextView
        android:id="@+id/changeAddressTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:gravity="right"
        android:layout_alignParentBottom="true"
        android:text="@string/change_shipping_address"
        android:textColor="@color/green_checkout"
        android:layout_marginBottom="@dimen/margin5"
        android:textSize="@dimen/text_15" />

</RelativeLayout>
