<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shipping_cartCD"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin5"
    style="@style/margin10LeftRight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/summary_headerRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:gravity="center_vertical"
                android:text="@string/shipping_method"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15" />

            <ImageView
                android:id="@+id/expandShippingIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin10"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detail_ordersumryRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/summary_headerRL"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/shipping_radioGrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:orientation="vertical">

            </RadioGroup>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />


        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>