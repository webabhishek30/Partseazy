<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/padding5">

    <LinearLayout
        style="@style/margin10LeftRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headingTV"
            style="@style/margin10LeftRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="@dimen/padding5"
            android:paddingTop="@dimen/padding5"
            android:text="Deliver to"
            android:textColor="@color/black"
            android:textSize="@dimen/text_17" />

        <TextView
            style="@style/margin10LeftRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:text="Please input the name of the person to whom the delivery should be given"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/shippingNameTIL"
            style="@style/margin10LeftRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin15"
            android:layout_marginTop="@dimen/margin10"
            android:hint="Deliver to"
            android:theme="@style/MyTextInputLayoutGrey">

            <EditText
                android:id="@+id/shippingNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text_dark"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:textColor="@color/text_dark" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/submitBT"
            style="@style/styleSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:gravity="center"
            android:text="@string/submit" />

    </LinearLayout>


</LinearLayout>

