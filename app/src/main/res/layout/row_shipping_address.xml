<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_addressRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin10"
    android:layout_marginLeft="@dimen/margin10"
    android:layout_marginRight="@dimen/margin10"
    android:background="@drawable/rectangle_grey_border_white_solid"
    android:elevation="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/addressTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/landmarkTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pincodeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mobileTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/gstnTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_15"
            android:text="@string/gstn_caps"
            android:visibility="gone" />

    </LinearLayout>

    <ImageView
        android:id="@+id/checkIV"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin5"
        android:src="@drawable/check_green_circle" />

</RelativeLayout>