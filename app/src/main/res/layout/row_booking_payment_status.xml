<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/order_reviewTV"
    style="@style/margin10LeftRight"
    android:layout_marginTop="@dimen/margin10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin10">

        <TextView
            android:id="@+id/makePaymentTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            style="@style/margin10LeftRight"
            android:gravity="left"
            android:textColor="@color/black"
            android:text="You may also pay through"
            android:textSize="@dimen/text_14"
            android:textAllCaps="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/statusIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin10"
            android:src="@drawable/check_green_circle" />

        <TextView
            android:id="@+id/statusTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:gravity="center_horizontal"
            android:text="@string/payment_success"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/paymentStatusMsgTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/successfull_payment_msg"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin10"
            android:textSize="@dimen/text_15"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/paymentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"
            android:layout_marginBottom="@dimen/margin20"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/prepaidRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin10"
                android:visibility="visible" />

            <Button
                android:id="@+id/paymentBT"
                style="@style/styleSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pay_now"
                android:textAllCaps="true" />
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

