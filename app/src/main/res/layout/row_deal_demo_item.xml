<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/margin8LeftRight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin10"
    android:layout_marginBottom="@dimen/margin20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headerRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_checkout"
            android:padding="@dimen/padding15">

            <TextView
                android:id="@+id/headingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inshop_demo"
                android:textColor="@color/white"
                android:textSize="@dimen/text_17" />

            <TextView
                android:id="@+id/subHeadingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/headingTV"
                android:layout_marginTop="@dimen/margin5"
                android:text="@string/request_number"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:visibility="visible"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_expand_arrow"
                android:visibility="gone"/>


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dealDemoRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/viewMoreLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding8"
            android:paddingBottom="@dimen/padding8"
            android:paddingLeft="@dimen/padding10"
            android:visibility="gone">

            <TextView
                android:id="@+id/viewMoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/view_more"
                android:textColor="@color/green_success"
                android:textSize="@dimen/text_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height30"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding5"
                android:src="@drawable/icon_green_right" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>