<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/margin10"
    android:layout_marginRight="@dimen/margin10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderNumberTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/orderedDateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placed_on_date"
                    android:textSize="@dimen/text_12"
                    android:visibility="visible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/detailTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:background="@drawable/red_border_rectangle"
                android:gravity="center"
                android:paddingBottom="@dimen/padding5"
                android:paddingLeft="@dimen/padding2"
                android:paddingRight="@dimen/padding2"
                android:paddingTop="@dimen/padding5"
                android:text="@string/details"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_13"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:orientation="horizontal">

            <com.android.volley.toolbox.NetworkImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/productIconIV"
                android:layout_width="@dimen/width70"
                android:layout_height="@dimen/height80"
                android:layout_marginLeft="@dimen/margin2"
                android:layout_marginRight="@dimen/margin10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dealNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Samsung Galaxy J2 Pro Cover by Mirox - Transparent"
                    android:textSize="@dimen/text_18" />

                <LinearLayout
                    android:id="@+id/singleSkuLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/skuPriceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin2"
                        android:text="Rs 24,480"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_16" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/skuMrpTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs 24,480"
                            android:textColor="@color/textGray"
                            android:textSize="@dimen/text_13" />

                        <TextView
                            android:id="@+id/skuDiscountTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin5"
                            android:background="@drawable/rectangle_green_border"
                            android:paddingBottom="@dimen/padding2"
                            android:paddingLeft="@dimen/padding5"
                            android:paddingRight="@dimen/padding5"
                            android:paddingTop="@dimen/padding2"
                            android:text="20% OFF"
                            android:textColor="@color/green_checkout"
                            android:textSize="@dimen/text_12" />

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
