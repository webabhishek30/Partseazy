<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/margin10"
    android:layout_marginRight="@dimen/margin10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/refurbished_policy"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_17" />
            <ImageView
                android:id="@+id/favouriteIconCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/refurb" />

        </RelativeLayout>


        <TextView
            android:id="@+id/pointTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:textSize="@dimen/text_14"
            android:text="@string/refurbish_conditions" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/viewMoreLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewMoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/learn_more"
                android:textColor="@color/green_success"
                android:textSize="@dimen/text_15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height30"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding5"
                android:src="@drawable/icon_green_right" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
