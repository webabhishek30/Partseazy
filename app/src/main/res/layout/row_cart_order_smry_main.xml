<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ordersmry_cartCD"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ordersummarTV"
    style="@style/margin10LeftRight"
    android:layout_marginTop="@dimen/margin5"
    android:layout_marginBottom="@dimen/margin5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/ordersummaryHeaderRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ordersummarTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:gravity="center_vertical"
                android:text="@string/order_summary"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15" />

            <ImageView
                android:id="@+id/expandOrderIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin10"
                android:src="@drawable/ic_plus" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/detailOrderSummaryRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include layout="@layout/row_cart_order_summary" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

