<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin10"
    android:layout_marginLeft="@dimen/margin10"
    android:layout_marginRight="@dimen/margin10"
    android:layout_height="@dimen/height70">

    <LinearLayout
        android:id="@+id/ll_click_to_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_blue"
        >
        <ImageView
            android:layout_width="@dimen/width50"
            android:layout_height="@dimen/height50"
            android:layout_gravity="center_vertical"
            android:tint="@color/colorDarkBlue"
            android:src="@drawable/applozic_ic_action_call"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin10"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDarkBlue"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"
                android:fontFamily="sans-serif"

                android:text="@string/call_to_order_caps"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cursor_focus_field"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/margin5"
                android:textSize="@dimen/text_14"
                android:textStyle="normal"
                android:fontFamily="sans-serif"

                android:text="@string/just_call_us"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
