<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin5"
    android:layout_marginTop="@dimen/margin10"
    style="@style/margin10LeftRight"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/pagerLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_grey_border_white_solid"
        android:elevation="1dp"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:tabIndicatorColor="@color/green_checkout"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/green_checkout"
            app:tabTextColor="@color/text_dark" />


        <android.support.v4.view.ViewPager
            android:id="@+id/youtubeViewPager"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="@dimen/margin5"
            android:background="@color/white"></android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>
