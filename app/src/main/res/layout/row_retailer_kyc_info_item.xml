<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_marginTop="@dimen/margin10"
    style="@style/margin10LeftRight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/headingRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/headingTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/kyc_details"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:id="@+id/editIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin10"
                android:src="@drawable/ic_pencil_edit" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noVisitingCardRL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height80"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/overlay_color">

            <TextView
                android:id="@+id/errTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Visting Card Picture"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:layout_centerInParent="true"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/visitingCardPicLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/visitingCardTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visiting Card "
                android:textSize="@dimen/text_16"
                android:textColor="@color/black"/>
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/visitingCardIV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/margin5"
                android:layout_gravity="center_horizontal"
                android:background="@color/dull_white"
                android:padding="@dimen/padding10"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/noShopFrontRL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height80"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/overlay_color">

            <TextView
                android:id="@+id/errShopFrontTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Shop Front  Picture"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:layout_centerInParent="true"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/shopFrontLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/shopFrontTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_pic"
                android:textSize="@dimen/text_16"
                android:textColor="@color/black"/>
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/shopFrontIV"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/margin5"
                android:layout_gravity="center_horizontal"
                android:background="@color/dull_white"
                android:padding="@dimen/padding10"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GSTN Number :"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS Location :"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin5"
                android:textSize="@dimen/text_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deal in Feature Phone, Smart phone "
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/margin5"
                android:textSize="@dimen/text_16"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>