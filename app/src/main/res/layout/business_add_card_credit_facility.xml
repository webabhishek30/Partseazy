<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin10"
    android:background="@color/white"
    android:elevation="3dp">

    <LinearLayout
        android:id="@+id/addressLLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding5"
            android:text="@string/shop_address"
            android:textColor="@color/green_success"
            android:textSize="@dimen/text_15" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/shopPincodeTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pincode"
            android:theme="@style/MyTextInputLayoutGrey">

            <EditText
                android:id="@+id/shopPincodeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text_dark"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/text_dark" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/shopAddressTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:theme="@style/MyTextInputLayoutGrey">

            <EditText
                android:id="@+id/shopAddressET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text_dark"
                android:imeOptions="actionNext"
                android:inputType="textPostalAddress"
                android:textColor="@color/text_dark" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/shopCityTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:hint="@string/town_city"
            android:theme="@style/MyTextInputLayoutGrey">

            <EditText
                android:id="@+id/shopCityET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text_dark"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="textPostalAddress"
                android:textColor="@color/text_dark" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/shopStateTIL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5"
            android:hint="@string/state"
            android:theme="@style/MyTextInputLayoutGrey">

            <EditText
                android:id="@+id/shopStateET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/text_dark"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:inputType="textPostalAddress"
                android:textColor="@color/text_dark" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>